<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WelcomeMenu.Options"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <Button
                        android:fontFamily="sans-serif-condensed"
                        android:id="@+id/logOut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/spacing_20dp"
                        android:layout_gravity="end"
                        android:background="@drawable/roundbutton"
                        android:text="LogOut"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />



                    <TextView
                        android:fontFamily="sans-serif-condensed"
                        android:id="@+id/welcomeToApp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="Welcome to Stay Healthy"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                 />



                    <ImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_gravity="center"
                        android:id="@+id/gifImage"
                        android:background="@drawable/diet_exercise"
                        android:layout_marginTop="5dp"/>


                    <TextView
                        android:fontFamily="sans-serif-condensed"
                        android:id="@+id/idtoaddname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Select One Option"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:layout_marginTop="10dp"
                       />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:elevation="@dimen/_3sdp"

                            app:cardCornerRadius="@dimen/_15sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/lightblue"
                                android:paddingBottom="@dimen/_10sdp"
                                android:orientation="vertical">

                                <ImageButton
                                    android:layout_gravity="center"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:padding="10dp"
                                    android:scaleType="centerInside"
                                    android:id="@+id/messengerID"
                                    android:background="@color/lightblue"
                                    android:src="@drawable/chat" />

                                <TextView
                                    android:fontFamily="sans-serif-condensed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Messenger"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_15sdp"
                            android:elevation="@dimen/_3sdp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/lightblue"
                                android:paddingBottom="@dimen/_10sdp"
                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/stepSensorID"
                                    android:layout_gravity="center"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:padding="10dp"
                                    android:scaleType="centerInside"
                                    android:background="@color/lightblue"
                                    android:src="@drawable/walk" />

                                <TextView
                                    android:fontFamily="sans-serif-condensed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Step Sensor"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="2">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_15sdp"
                            android:elevation="@dimen/_3sdp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/lightblue"
                                android:paddingBottom="@dimen/_10sdp"
                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/exerciseID"
                                    android:layout_gravity="center"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:padding="10dp"
                                    android:scaleType="centerInside"
                                    android:background="@color/lightblue"
                                    android:src="@drawable/wellness" />

                                <TextView
                                    android:fontFamily="sans-serif-condensed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Exercise Videos"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_15sdp"
                            android:elevation="@dimen/_3sdp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/lightblue"
                                android:paddingBottom="@dimen/_10sdp"
                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/emailSupportID"
                                    android:layout_gravity="center"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:padding="10dp"
                                    android:scaleType="centerInside"
                                    android:background="@color/lightblue"
                                    android:src="@drawable/support" />

                                <TextView
                                    android:fontFamily="sans-serif-condensed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Email Support"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>




                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_15sdp"
                            android:elevation="@dimen/_3sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/lightblue"
                                android:paddingBottom="@dimen/_10sdp"
                                android:orientation="vertical"

                                >

                                <ImageButton
                                    android:id="@+id/yogaClick"
                                    android:layout_gravity="center"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:padding="10dp"
                                    android:scaleType="centerInside"
                                    android:background="@color/lightblue"
                                    android:src="@drawable/yogapicture" />

                                <TextView
                                    android:fontFamily="sans-serif-condensed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Yoga Videos"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_15sdp"
                            android:elevation="@dimen/_3sdp">
                            
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/lightblue"
                                android:orientation="vertical"
                                android:paddingBottom="@dimen/_10sdp"
                                >


                                <ImageButton
                                    android:id="@+id/Products"
                                    android:layout_gravity="center"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:padding="10dp"
                                    android:scaleType="centerInside"
                                    android:background="@color/lightblue"
                                    android:src="@drawable/vegetarian" />

                                <TextView
                                    android:fontFamily="sans-serif-condensed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Generic Diet Plan"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />



                            </LinearLayout>
                            
                            

                            
                            
                        </androidx.cardview.widget.CardView>






                    </LinearLayout>



                    
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>