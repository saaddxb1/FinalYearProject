<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".highprotein">

    <ImageView
        android:id="@+id/proteinPic"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/caloriedeficit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/proteinpic"
        />
    <ImageView

        app:layout_constraintTop_toBottomOf="@id/proteinPic"
        android:id="@+id/caloriedeficit"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:src="@drawable/proteinboth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Defination : High protein diets are diets in which 20% or more of the total daily calories comes from proteins."
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp" />

</androidx.constraintlayout.widget.ConstraintLayout>