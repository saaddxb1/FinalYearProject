<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_10dp"
    tools:context=".activities.LeaderBoards">

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/strugglekaro"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/struggle"
            />

        <TextView
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Position: "
            android:textSize="@dimen/spacing_15dp"
            android:id="@+id/firstPos"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/strugglekaro"
            />

        <ImageView
            android:layout_marginRight="15dp"
            app:layout_constraintRight_toLeftOf="@id/firstPos"
            app:layout_constraintBottom_toBottomOf="@id/firstPos"
            android:id="@+id/firstYar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/firstposition"

            />


        <TextView
            android:fontFamily="sans-serif-condensed"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/firstPos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Second Position: "
            android:textSize="@dimen/spacing_15dp"
            android:id="@+id/secondPos"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_marginRight="15dp"
            app:layout_constraintRight_toLeftOf="@id/secondPos"
            android:id="@+id/secondYar"
            app:layout_constraintBottom_toBottomOf="@id/secondPos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/secondposition"
            />


        <TextView
            android:fontFamily="sans-serif-condensed"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/secondPos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Third Position: "
            android:textSize="@dimen/spacing_15dp"
            android:id="@+id/thirdPos"
            tools:ignore="MissingConstraints"
            />

        <ImageView
            android:layout_marginRight="@dimen/spacing_15dp"
            android:id="@+id/thirdYar"
            app:layout_constraintRight_toLeftOf="@id/thirdPos"
            app:layout_constraintBottom_toBottomOf="@id/thirdYar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/thirdposition"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>